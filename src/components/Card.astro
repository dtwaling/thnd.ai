---
import Icon from "./Icon.astro";
import type { StarlightIcon } from "../components/Icons";

interface Props {
	icon?: StarlightIcon;
	title: string;
}

const { icon, title } = Astro.props;
---

<!-- ToDo: Add parameters for more body text control -->
<!-- ToDo: Consider adding styles for cleaner handling of tables/lists within the body text -->
<article class="card sl-flex">
   <p class="title sl-flex">
      {icon && <Icon name={icon} class="icon" size="1.65em"/>}
      <span set:html={title} style="font-size:4rem"/>
   </p>
   <div class="body" style="font-size:24px">
      <slot />
   </div>
</article>

<style>
	@layer starlight.components {
		.card {
			--sl-card-border: var(--sl-color-purple);
			--sl-card-bg: var(--sl-color-purple-low);
			border: 1px solid var(--sl-color-gray-5);
			background-color: var(--sl-color-black);
			padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
			flex-direction: column;
			gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
		}
		.card:nth-child(4n + 1) {
			--sl-card-border: var(--sl-color-orange);
			--sl-card-bg: var(--sl-color-orange-low);
		}
		.card:nth-child(4n + 3) {
			--sl-card-border: var(--sl-color-green);
			--sl-card-bg: var(--sl-color-green-low);
		}
		.card:nth-child(4n + 4) {
			--sl-card-border: var(--sl-color-red);
			--sl-card-bg: var(--sl-color-red-low);
		}
		.card:nth-child(4n + 5) {
			--sl-card-border: var(--sl-color-blue);
			--sl-card-bg: var(--sl-color-blue-low);
		}
		.title {
			font-weight: 600;
			font-size: var(--sl-text-h1);
			color: var(--sl-color-white);
			line-height: var(--sl-line-height-headings);
			gap: 1rem;
			text-align: center;
			align-items: center;
		}
		.card .icon {
			border: 1px solid var(--sl-card-border);
			background-color: var(--sl-card-bg);
			padding: 0.1em;
			border-radius: 0.25rem;
			flex-shrink: 0;
		}
		.card .body {
			margin: 0;
			font-size: clamp(var(--sl-text-body), calc(1.5rem + 1vw), var(--sl-text-body));
			font-weight: 600;
			line-height: 1.2;
		}
	}
</style>
