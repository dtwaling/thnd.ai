---
import { Image } from "astro:assets";
import THNDimg from "../../public/images/thnd-logo-400.png";
interface Props {
   title: string;
   showLogo?: boolean;
}

const { title, showLogo = false } = Astro.props;
---


<article class="card sl-flex">
   <h2 class="title sl-flex">
      <a set:html={title} style="color:white; font-size:150%; font-weight:800"/>
      {showLogo && (
         <a>
            <Image
            class="image"
            src={THNDimg}
            alt="THND.ai logo"
            width={300}
            />
         </a>
      )}
   </h2>
   <div class="body">
      <slot />
   </div>
</article>

<style>
	@layer starlight.components {
		.card {
			--sl-card-border: var(--sl-color-purple);
			--sl-card-bg: var(--sl-color-purple-low);
			border-bottom: 1px solid var(--sl-color-gray-5);
         background-color: var(--sl-color-black);
			padding: clamp(0.1rem, 0.1rem, 0.1rem);
			flex-direction: column;
			gap: clamp(0.1rem, calc(0.125rem + 1vw), 0.1rem);
		}
		.card:nth-child(4n + 1) {
			--sl-card-border: var(--sl-color-orange);
			--sl-card-bg: var(--sl-color-orange-low);
		}
		.card:nth-child(4n + 3) {
			--sl-card-border: var(--sl-color-green);
			--sl-card-bg: var(--sl-color-green-low);
		}
		.card:nth-child(4n + 4) {
			--sl-card-border: var(--sl-color-red);
			--sl-card-bg: var(--sl-color-red-low);
		}
		.card:nth-child(4n + 5) {
			--sl-card-border: var(--sl-color-blue);
			--sl-card-bg: var(--sl-color-blue-low);
		}
		.title {
			font-weight: 600;
			font-size: var(--sl-text-h1);
			color: var(--sl-color-white);
			line-height: var(--sl-line-height-headings);
			gap: 1.3rem;
			align-items: center;
		}
		.card .icon {
			border: 1px solid var(--sl-card-border);
			background-color: var(--sl-card-bg);
			padding: 0.01em;
			border-radius: 0.25rem;
			flex-shrink: 0;
		}
		.card .body {
			margin: 0;
			font-size: clamp(var(--sl-text-sm), calc(1.5rem + 1vw), var(--sl-text-body));
		}
	}
</style>
